+  angularMeteor,
+  ngFileUpload,
+  'ngImgCrop',
+  'angular-sortable-view'
+]).component(name, {
+  template,
+  bindings: {
+    files: '=?'
+  },
+  controllerAs: name,
+  controller: PartyUpload
+});

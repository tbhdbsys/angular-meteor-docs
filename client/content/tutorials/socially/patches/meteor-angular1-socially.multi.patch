+          invited: this.userId
+        }, {
+          invited: {
+            $exists: true
+          }
+        }]
+      }]
+    };
+
+    if (typeof searchString === 'string' && searchString.length) {
+      selector.name = {
+        $regex: `.*${searchString}.*`,
+        $options : 'i'
+      };
+    }
+
